<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.valeriajara.umbrella.UmbrellaSignIn">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleBtn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"></com.google.android.gms.common.SignInButton>

    <EditText
    android:id="@+id/editTextEmail"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="Email address"
    android:inputType="textEmailAddress"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="60dp"
    />
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp" />

    <Button
        android:id="@+id/btnEmailLogin"
        android:onClick="emailLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Email"
        app:layout_constraintLeft_toLeftOf="@id/editTextPassword"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        />




</android.support.constraint.ConstraintLayout>
